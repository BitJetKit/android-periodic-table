<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="?attr/listChoiceBackgroundIndicator"
    android:minHeight="@dimen/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingBottom="@dimen/listPreferredItemPaddingBottom"
    android:paddingLeft="@dimen/listPreferredItemPaddingSide"
    android:paddingRight="@dimen/listPreferredItemPaddingSide"
    android:paddingTop="@dimen/listPreferredItemPaddingTop">

    <TextView
        android:id="@+id/property_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/property_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textAlignment="viewStart"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>
