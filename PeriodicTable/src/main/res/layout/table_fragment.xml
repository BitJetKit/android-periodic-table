<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity$TableFragment">

    <include
        layout="@layout/progress_bar"/>

    <com.frozendevs.periodic.table.view.ZoomView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <com.frozendevs.periodic.table.view.GridView
            xmlns:custom="http://schemas.android.com/apk/res/com.frozendevs.periodic.table"
            android:id="@+id/table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:numColumns="@integer/table_columns_count"
            custom:numRows="@integer/table_rows_count"
            custom:columnWidth="@dimen/table_tile_size"
            custom:rowHeight="@dimen/table_tile_size"
            custom:horizontalSpacing="@dimen/table_spacing"
            custom:verticalSpacing="@dimen/table_spacing"/>

    </com.frozendevs.periodic.table.view.ZoomView>

</LinearLayout>