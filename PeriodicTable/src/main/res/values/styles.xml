<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Application.Base" parent="Theme.AppCompat.NoActionBar">
    <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="viewPagerTabsStyle">@style/ViewPagerTabs</item>
        <item name="zoomableScrollViewStyle">@style/ZoomableScrollView</item>
    </style>

    <style name="Theme.Application" parent="Theme.Application.Base" />

    <style name="Theme.About.Base" parent="Theme.Application" />

    <style name="Theme.About" parent="Theme.About.Base" />

    <style name="Widget.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ViewPagerTabs" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="android:textSize">@dimen/tab_text_size</item>
    </style>

    <style name="ViewPagerTabs.Stretched" parent="@style/ViewPagerTabs">
    <item name="stretchTabs">true</item>
    </style>

    <style name="ZoomableScrollView">
        <item name="android:scrollbars">horizontal|vertical</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
